---
type Props = {
  href: string;
};

const { href } = Astro.props;
const active = Astro.url.pathname === href;
---

<li class="pb-2 last:pb-0">
  <a
    href={href}
    class:list={[
      "text-sm",
      {
        "text-zinc-800 dark:text-zinc-200 hover:text-lime-500 dark:hover:text-lime-400":
          !active,
        "text-lime-500 dark:text-lime-400 pointer-events-none": active,
      },
    ]}
  >
    <slot />
  </a>
</li>
