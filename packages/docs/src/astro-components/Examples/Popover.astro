---
type Props = {
  useTransition?: boolean;
  contentHidden?: boolean;
};

const { contentHidden = false, useTransition = false } = Astro.props;
---

<hyperkit-popover class="relative w-64 block">
  <hk-popover-trigger>
    <button
      class="px-2.5 py-2 text-sm shadow-sm rounded border-none bg-zinc-900 text-zinc-200 data-[visible]:bg-zinc-800 flex items-center justify-center focus:outline-none font-medium w-min whitespace-nowrap"
    >
      Open Popover
    </button>
  </hk-popover-trigger>
  {
    useTransition ? (
      <hk-popover-content hidden={contentHidden}>
        <hyperkit-transition
          enter-class="transition-all duration-500 ease-in"
          enter-from-class="opacity-0"
          enter-to-class="opacity-100"
          exit-class="transition-all duration-300 ease-out"
          exit-from-class="opacity-100"
          exit-to-class="opacity-0"
        >
          <div class="w-80 bg-white rounded-lg shadow-lg overflow-hidden absolute mt-1 p-4">
            <div class="font-bold text-zinc-800 mb-1">
              Transitioning Popover Title
            </div>
            <div class="text-xs text-zinc-600">
              This is some example content for the popover. You can put any HTML
              content here.
            </div>
          </div>
        </hyperkit-transition>
      </hk-popover-content>
    ) : (
      <hk-popover-content hidden={contentHidden}>
        <div class="w-80 bg-white rounded-lg shadow-lg overflow-hidden absolute mt-2 p-4">
          <div class="font-bold text-zinc-800 mb-1">Popover Title</div>
          <div class="text-xs text-zinc-600">
            This is some example content for the popover. You can put any HTML
            content here.
          </div>
        </div>
      </hk-popover-content>
    )
  }
</hyperkit-popover>
<div class="w-80 h-28"></div>

<script>
  import "@hyperkit/elements/popover.ts";
  import "@hyperkit/elements/transition.ts";
</script>
