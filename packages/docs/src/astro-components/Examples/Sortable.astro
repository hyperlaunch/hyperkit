---
const items = [
  { label: "First Item", id: "item-1" },
  { label: "Second Item", id: "item-2" },
  { label: "Third Item", id: "item-3" },
  { label: "Fourth Item", id: "item-4" },
];
---

<hyperkit-sortable class="bg-white rounded-md shadow-md w-64 overflow-hidden">
  {
    items.map(({ label, id }) => (
      <hyperkit-sortable-item class="flex items-center pr-4 pl-3 py-2 border-b border-b-zinc-200 data-[before]:border-t-2 data-[before]:border-t-blue-400 data-[after]:border-b-2 data-[after]:border-b-blue-400 text-zinc-800">
        <hyperkit-sortable-handle>
          <button class="cursor-move mr-2 text-zinc-400 select-none font-black px-1">
            &#8942;
          </button>
        </hyperkit-sortable-handle>
        <span class="text-xs font-medium">{label}</span>
        <hyperkit-sortable-position>
          <input type="hidden" name={`${id}-position`} />
        </hyperkit-sortable-position>
      </hyperkit-sortable-item>
    ))
  }
</hyperkit-sortable>

<script>
  import "@hyperkit/elements/sortable.ts";
</script>
