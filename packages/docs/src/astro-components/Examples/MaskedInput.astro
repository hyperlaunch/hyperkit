---
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"input">, "class" | "type"> & { mask: string };

const { mask, ...props } = Astro.props;
---

<hyperkit-masked-input mask={mask}>
  <input
    type="text"
    class="w-72 px-2.5 py-2 text-base border border-zinc-200 shadow-sm rounded bg-white text-zinc-800 text-sm"
    {...props}
  />
</hyperkit-masked-input>

<script>
  import "@hyperkit/elements/masked-input.ts";
</script>
