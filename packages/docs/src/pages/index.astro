---
import "../base.css";
import Calendar from "../components/calendar.astro";
import MaskedInput from "../components/masked-input.astro";

const minDate = new Date();
minDate.setDate(minDate.getDate() - 3);

const maxDate = new Date();
maxDate.setDate(maxDate.getDate() + 3);
---

<html lang="en" class="bg-zinc-100 font-poppins">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Date Picker Demo</title>
  </head>
  <body class="p-6 lg:p-8 xl:p-10 2xl:p-12">
    <div class="prose mx-auto">
      <h1>Calendar</h1>
      
      <h2>With `min-date` and `max-date`</h2>
      <Calendar
        minDate={minDate}
        maxDate={maxDate}
      />

      <h2>With `future-only`</h2>
      <Calendar futureOnly />

      <h2>With `past-only`</h2>
      <Calendar pastOnly />

      <h2>With connected input</h2>
      <div class="max-w-96">
        <MaskedInput
          type="text" 
          name="date_value"
          class="w-full mb-4 p-2 border rounded bg-white bg-opacity-80"
          placeholder="YYYY-MM-YY" 
          mask="####-##-##" 
        />
        <Calendar for="date_value" />
      </div>
    </div>
  </body>
</html>