---
type Props = {
  for?: string;
	minDate?: Date;
	maxDate?: Date;
	futureOnly?: boolean;
	pastOnly?: boolean;
};

const { for: forElement, minDate, maxDate, futureOnly, pastOnly } = Astro.props;
---

<hyperkit-date-picker
  class="max-w-96 bg-white bg-opacity-80 backdrop-blur-sm rounded-lg shadow-lg p-6 block"
  min-date={minDate?.toISOString()}
  max-date={maxDate?.toISOString()}
  future-only={futureOnly}
  pastOnly={pastOnly}
  for={forElement}
>
  <template>
    <div class="flex justify-between items-center mb-6">
      <previous-month class="text-gray-600 hover:text-gray-800">&lt;</previous-month>
      <current-month class="text-2xl font-bold text-gray-800"></current-month>
      <next-month class="text-gray-600 hover:text-gray-800">&gt;</next-month>
    </div>
    <div class="grid grid-cols-7 gap-2 mb-4">
      <div class="text-center text-sm font-semibold text-gray-600">M</div>
      <div class="text-center text-sm font-semibold text-gray-600">T</div>
      <div class="text-center text-sm font-semibold text-gray-600">W</div>
      <div class="text-center text-sm font-semibold text-gray-600">T</div>
      <div class="text-center text-sm font-semibold text-gray-600">F</div>
      <div class="text-center text-sm font-semibold text-gray-600">S</div>
      <div class="text-center text-sm font-semibold text-gray-600">S</div>
    </div>
    <days-list class="grid grid-cols-7 gap-2"></days-list>
    <day-number
      class="w-10 h-10 flex items-center justify-center rounded-full cursor-pointer text-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-blue-200 transition-colors duration-200 data-[today]:bg-blue-600 data-[today]:text-white data-[selected]:bg-blue-200 data-[other-month]:text-gray-400 disabled:text-gray-400"
    ></day-number>
  </template>
</hyperkit-date-picker>